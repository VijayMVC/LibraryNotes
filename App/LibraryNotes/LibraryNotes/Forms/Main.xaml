<Window x:Class="LibraryNotes.Forms.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryNotes.Forms"
        xmlns:wnd ="clr-namespace:LibraryNotes.Forms.MainWindows"
        mc:Ignorable="d"
        Title="Main" Height="640" Width="800">
    <Grid>
        <TabControl Margin="0 0 0 20">
            <TabItem Header ="Books"  Name="DataGridBooksWrap"></TabItem>
            <TabItem Header ="User Info" Name="TabItem_UserInfo"></TabItem>
            <TabItem Header ="User Orders" Name="TabItem_UserOrders"></TabItem>
            <TabItem Header ="Book search" Name="BookSearch"></TabItem>
            
            <TabItem Header ="Admin Panel" Name="AdminPanel"></TabItem>
        </TabControl>
        <Button Name="Logout" VerticalAlignment="Bottom" Height="20" Width="50" Content="Logout" HorizontalAlignment="Right" Click="Logout_ButtonCLick"/>
    </Grid>
</Window>
